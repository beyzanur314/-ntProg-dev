@model Ders
@{
    ViewData["Title"] = "AddDers";
}
<div class="container d-flex justify-content-center my-5">
<div class="card" style="width: 50%; background-color: #e3f2fd;">
    <div class="card-body">
        <h2 class="card-title text-center">Ders Ekleme İşlemi</h2>
        <form asp-action="AddDers" asp-controller="Ders" method="post">
            <div class="form-group">
                <label for="DersKodu">Ders Kodu</label>
                <input asp-for="Dersid" class="form-control" id="Dersid" />
            </div>

            <div class="form-group">
                <label for="DersAd">Ders Adı</label>
                <input asp-for="Dersad" class="form-control" id="DersAd" />
            </div>

            <div class="form-group">
                <label for="Kredi">Kredi</label>
                <input asp-for="Kredi" class="form-control" id="Kredi" />
            </div>

             <div class="form-group text-center mt-4">
                 <button type="submit" class="btn btn-primary">Kaydet</button>
             </div>
        </form>
    </div>
</div>
</div>
